            @RenderBody()
        </div>
        <div class="menu-left">
            @Html.Action("MenuLeft", "ChuDe")
        </div>
    </div>
    <footer>
        <div class="copyright">Copyright &copy; 2024 Nguyễn Văn Quí Mùi - nguyenvanquymui2003@gmail.com</div>
    </footer>
</body>
</html>
